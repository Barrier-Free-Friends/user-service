{
  "family": "user-service-id",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "user-service-container",
      "image": "PLACEHOLDER_IMAGE",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "ENV_DB_URL", "value": "PLACEHOLDER_DB_URL" },
        { "name": "ENV_DB_USERNAME", "value": "PLACEHOLDER_DB_USERNAME" },
        { "name": "ENV_DB_PASSWORD", "value": "PLACEHOLDER_DB_PASSWORD" },
        { "name": "ENV_DB_DDL_AUTO", "value": "update" },
        { "name": "ENV_JWT_SECRET", "value": "PLACEHOLDER_JWT_SECRET" },
        { "name": "ENV_ACCESS_TOKEN_EXPIRATION", "value": "PLACEHOLDER_ACCESS_TOKEN_EXPIRATION" },
        { "name": "ENV_REFRESH_TOKEN_EXPIRATION", "value": "PLACEHOLDER_REFRESH_TOKEN_EXPIRATION" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/user-service",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
